        <junit.bom.version>6.0.3</junit.bom.version>
        <org.openapitools.version>7.15.0</org.openapitools.version>
        <api.definition.input.file>${project.parent.basedir}/api/definition/ai-agents-api.yaml
        </api.definition.input.file>
        <api.package.api>mb.demo.applications.ai.agents.webapi.api</api.package.api>
        <api.package.model>mb.demo.applications.ai.agents.webapi.model</api.package.model>
        <api.package.invoker>mb.demo.applications.ai.agents.webapi.client</api.package.invoker>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- Source: https://mvnrepository.com/artifact/org.springframework.boot/spring-boot-dependencies -->
